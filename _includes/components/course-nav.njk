<ol class="course-navigation flow">
{% for item in course | orderByNavigation %}
    {%- if item.url != page.url -%}
        <li>
            <h3><a href="{{ item.url }}">{{loop.index}}. {{ item.data.title }}</a></h3>
            <p>{{ item.data.summary }}</p>
        </li>
    {%- endif -%}
{% endfor %}
</ol>