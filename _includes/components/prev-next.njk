{% set currentPage %}{{ page.fileSlug }}{% endset %}
{% set navPages = collections.all | eleventyNavigation(eleventyNavigation.parent) %}
<nav class="prev-next region" role="navigation" aria-label="secondary">
    <ul>
        {%- set previousPost = navPages | prev(page.url) %}
        <li>
            {%- if previousPost %}
                <a class="button" href="{{ previousPost.url | url }}">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M15.28 5.22a.75.75 0 0 1 0 1.06L9.56 12l5.72 5.72a.749.749 0 0 1-.326 1.275.749.749 0 0 1-.734-.215l-6.25-6.25a.75.75 0 0 1 0-1.06l6.25-6.25a.75.75 0 0 1 1.06 0Z"></path></svg>
                    <span>{{ previousPost.title | capitalize }}</span>
                </a>
            {% endif %}
        </li>
        {%- set nextPost = navPages | next(page.url) %}
        <li>
            {%- if nextPost %}
                <a class="button" href="{{ nextPost.url | url }}">
                    <span>{{ nextPost.title | capitalize }}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24"><path d="M8.72 18.78a.75.75 0 0 1 0-1.06L14.44 12 8.72 6.28a.751.751 0 0 1 .018-1.042.751.751 0 0 1 1.042-.018l6.25 6.25a.75.75 0 0 1 0 1.06l-6.25 6.25a.75.75 0 0 1-1.06 0Z"></path></svg>
                </a>
            {% endif %}
        </li>
    </ul>
</nav>